<div class="col-sm-6">
  <h2>Editar <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, class:'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>A aguardar confirmação de: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(deixar em branco para manter a password antiga)</i><br/>
        <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
        <% if @minimum_password_length %>
            <br/>
            <em>Mínimo de caracteres: <%= @minimum_password_length %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label 'Confirmar password' %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
      </div>

      <div class="field">
        <%= f.label 'Password atual' %> <i>(é necessário para confirmar as alterações)</i><br/>
        <%= f.password_field :current_password, autocomplete: "off", class:'form-control' %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Atualizar", class:'btn btn-primary' %>
      </div>
  <% end %>

  <h3>Cancelar a minha conta</h3>

  <p>Não está
    satisfeito? <%= button_to "Cancelar a minha conta", registration_path(resource_name), data: {confirm: "Tem a certeza?"}, method: :delete %></p>

  <%= link_to "Voltar", :back, class:'btn btn-default' %>
</div>